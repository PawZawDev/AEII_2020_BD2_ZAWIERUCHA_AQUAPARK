@model IEnumerable<Aquapark.Models.Wristband>

    <table class="table" id="resultsTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsUsed)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsUsed)
                </td>
                <td>
                    @{
                        if (System.Web.HttpContext.Current.User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <text>|</text>
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) <text>|</text>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <text>|</text>
                        }
                    }
                    @Html.ActionLink("Get Tickets", "GetTicketsOnWristband", "ClientTickets", new { id = item.Id }, null) |
                    @Html.ActionLink("Return Wristband", "ReturnWristband", "ClientTickets", new { id = item.Id }, null) |
                    @Html.ActionLink("Create Ticket", "CreateTicket", "ClientTickets", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }

    </table>