@model Aquapark.Models.ClientTicket

@{
    ViewBag.Title = "Create Ticket";
}

<h2>Add Ticket</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.IdWristband)

    <div class="form-horizontal">
        <h4>ClientTicket</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.IdTicketInPriceList, "IdTicketInPriceList", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdTicketInPriceList", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTicketInPriceList, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "IndexWristband", "ClientTickets", new { id = Model.IdWristband }, new { @class = "btn btn-outline-secondary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
